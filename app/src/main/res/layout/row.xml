<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="120dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="商品名"/>

            <TextView
                android:id="@+id/name_cont"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textColor="#000"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:text="価格"/>

                    <TextView
                        android:id="@+id/price_cont"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:textColor="#ff0000"
                        android:textSize="18sp"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/item_edit_page"
                    android:layout_width="0dp"
                    android:textSize="18dp"
                    android:layout_height="47dp"
                    android:background="#fff"
                    android:text="@string/icon_edit_page"
                    android:textStyle="bold"
                    android:textColor="@color/alertBlue"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:orientation="vertical"
            >
        <Button
            android:id="@+id/item_show"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_primary"
            android:textColor="#fff"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/icon_show"/>
        <Button
            android:id="@+id/item_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:background="@drawable/button_delete"
            android:text="@string/icon_delete"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
