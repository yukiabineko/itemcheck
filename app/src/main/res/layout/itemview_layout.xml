<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="@string/itemViewTitle"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="36sp"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/api_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/api_button"
            android:layout_gravity="right"/>

        <Button
            android:id="@+id/all_delete"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="@string/all_reset"
            android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/table-header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#c0c0c0"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="イメージ"
            android:textColor="#fff" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:text="商品"
            android:textColor="#fff" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>
    <TextView
        android:id="@+id/not_data"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:text="データ表示できません。"
         />

</LinearLayout>
