<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="商品名"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="注文依頼先"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/request_name_cont"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/request_shop_cont"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="発注数"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="発注日"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="発注確定"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/request_num_cont"
                    android:layout_width="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-4dp"
                    android:layout_height="30dp"
                    android:textColor="#ff0000"
                    android:textSize="22sp"
                    />
                <TextView
                    android:id="@+id/request_day_cont"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-4dp"
                    android:textColor="#ff0000"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/request_confirm_cont"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textColor="#ff0000"
                    android:layout_marginTop="-10dp"
                    android:textSize="10sp"
                    />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/reuest_send"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_primary"
                android:textColor="#fff"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="確認"/>
            <Button
                android:id="@+id/reuest_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_edit"
                android:textColor="#0000bb"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:layout_marginBottom="8dp"
                android:text="戻す"/>
            <Button
                android:id="@+id/request_close"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#fff"
                android:background="@drawable/button_primary"
                android:text="メール"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
